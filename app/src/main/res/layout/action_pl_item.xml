<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sp_15"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <com.facebook.drawee.view.SimpleDraweeView
                  android:id="@+id/pl_tx"
                  android:layout_margin="@dimen/dp_10"
                  android:layout_width="@dimen/dp_50"
                  app:roundAsCircle="true"
                  android:layout_height="@dimen/dp_50" />
              <TextView
                  android:id="@+id/pl_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/sp_15"
                  android:layout_weight="1"
                  android:text="昵称"/>
              <TextView
                  android:id="@+id/pl_data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:textSize="@dimen/sp_10"
                  android:layout_marginTop="@dimen/sp_15"
                  android:text="时间"/>
          </LinearLayout>
            <TextView
                android:id="@+id/pl_pl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sp_10"
                android:text="会场喜欢的一个还跑"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pl_icon2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10"
                app:roundedCornerRadius="@dimen/dp_15"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
