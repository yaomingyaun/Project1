<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".my.activity1.NewAddressActivity">

    <TextView
        android:id="@+id/xzshdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
       android:layout_gravity="center"
        android:text="新增收货地址"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cad"
            android:layout_below="@id/xzshdz"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_20"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_height="match_parent">

          <RelativeLayout
              android:id="@+id/be"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/sjr"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:gravity="center"
                  android:text="收 件 人："/>
              <EditText
                  android:id="@+id/et_name"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:gravity="center"
                  android:background="@null"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_toRightOf="@id/sjr"
                  android:hint="请输入姓名"
                  android:layout_gravity="center"
                  />
              <View
                  android:id="@+id/xzshdz_v1"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                android:layout_below="@id/sjr"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="#888888"/>
              <TextView
                  android:id="@+id/sjhm"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:layout_below="@+id/xzshdz_v1"
                  android:layout_marginTop="@dimen/dp_10"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:text="手机号码："/>
              <EditText
                  android:id="@+id/et_phone"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:gravity="center"
                  android:background="@null"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_toRightOf="@id/sjhm"
                  android:layout_below="@id/xzshdz_v1"
                  android:hint="请输入手机号"
                  android:maxLength="11"
                  android:layout_gravity="center"
                  />
              <View
                  android:id="@+id/xzshdz_v2"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:layout_below="@id/sjhm"

                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="#888888"/>
              <TextView
                  android:id="@+id/szdq"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:layout_below="@+id/xzshdz_v2"
                  android:gravity="center"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:text="所在地区："/>
              <TextView
                  android:id="@+id/dizhi"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="@null"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_toRightOf="@id/szdq"
                  android:layout_below="@id/xzshdz_v2"
                  android:hint="请选择所在地区"
                  android:layout_gravity="center"
                  />
              <View
                  android:id="@+id/xzshdz_v3"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:layout_below="@id/szdq"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="#888888"/>
              <ImageView
                  android:id="@+id/address"
                  android:layout_width="@dimen/dp_30"
                  android:layout_height="@dimen/dp_30"
                  android:layout_below="@id/sjhm"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dp_30"
                  android:background="@drawable/right"/>

              <TextView
                  android:id="@+id/xxdz"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_56"
                  android:layout_below="@+id/xzshdz_v3"
                  android:layout_marginTop="@dimen/dp_10"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:text="详细地址："/>
              <EditText
                  android:id="@+id/et_xxdz"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_56"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="@null"
                  android:layout_toRightOf="@id/xxdz"
                  android:layout_below="@id/xzshdz_v3"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_gravity="center"
                  />
              <View
                  android:id="@+id/xzshdz_v4"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:layout_below="@id/xxdz"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="#888888"/>

              <TextView
                  android:id="@+id/yb"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_below="@+id/xzshdz_v4"

                  android:layout_marginTop="@dimen/dp_10"
                  android:gravity="center"
                  android:text="邮编："/>
              <EditText
                  android:id="@+id/et_youbian"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_30"
                  android:gravity="center"
                  android:background="@null"
                  android:layout_toRightOf="@id/yb"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:hint="请输入邮编"
                 android:maxLength="6"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_below="@id/xzshdz_v4"
                  android:layout_gravity="center"
                  />
              <View
                  android:id="@+id/xzshdz_v5"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:layout_below="@id/yb"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_marginBottom="@dimen/dp_20"
                  android:background="#888888"/>

          </RelativeLayout>
        </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/ok"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_50"
        android:text="确认地址"
        android:textColor="#ffffff"
        android:background="@drawable/addplace"
        android:layout_gravity="center"
        />

</LinearLayout>